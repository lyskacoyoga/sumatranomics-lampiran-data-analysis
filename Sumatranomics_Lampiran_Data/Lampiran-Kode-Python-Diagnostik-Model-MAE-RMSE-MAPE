import pandas as pd

# Membuat DataFrame Tabel Diagnostik Model
data = {
    "Metrik": ["MAE", "RMSE", "MAPE"],
    "Nilai": [589403.836, 697098.395, 3.047164],
    "Deskripsi": [
        "Rata-rata kesalahan absolut (Rp/kg).",
        "Akar rata-rata kuadrat error, sensitif terhadap outlier (lonjakan/penurunan harga ekstrem).",
        "Rata-rata kesalahan relatif dalam persen."
    ]
}

df_diagnostik = pd.DataFrame(data)

# Menampilkan tabel
print(df_diagnostik)

# Jika ingin tampil lebih rapi di notebook (misalnya Jupyter/Colab)
import matplotlib.pyplot as plt
import seaborn as sns

plt.figure(figsize=(8,2))
sns.heatmap(
    df_diagnostik.set_index("Metrik")[["Nilai"]], 
    annot=True, fmt=".3f", cmap="Blues", cbar=False
)
plt.title("Tabel Diagnostik Model (MAE, RMSE, MAPE)")
plt.show()
